@model ExemploCore3.Models.Acessa
<div class="form-group">
    <form method="post" asp-antiforgery="true" class="col-sm-12">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div>
            <input asp-for="Id" hidden class="form-control" />
            <span asp-validation-for="Id" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-sm-6">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="col-sm-6">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" type="email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>

        <div class="row" id="PassWordRow">
            <div class="col-sm-6">
                <label asp-for="Senha" class="control-label"></label>
                <input asp-for="Senha" type="password" class="form-control" />
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>
            <div class="col-sm-6">
                <label class="control-label"> Confirme a Senha</label>
                <input name="Confirm" id="Confirm" type="password" class="form-control" />
            </div>

        </div>
        <div class="row">
            <div class="col-sm-12">
                <label asp-for="Role" class="control-label"></label>
                <select asp-for="Role" class="form-control">
                    <option value="">Selecione...</option>
                    <option value="Administrador"> Administrador</option>
                    <option value="Faturamento"> Faturamento</option>
                    <option value="Cadastro"> Cadastro</option>
                </select>
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>
        </div>
    </form>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
